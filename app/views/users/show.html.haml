- content_for :title, @user.name
.container
  %h1= "#{@user.name}"
  %h3.user_type= "#{@user.user_type_string}"
  .card
    .row
      %dl.dl-horizontal
        / - if @user.user_type == 0
        / %dt Email
        / %dd
        /   = @user.email

        / %dt Courses Taken
        / %dd
        /   - @user.courses.each do |course|
        /     %span.tags.course-tag= course.name
            
        / %dt Interests
        / %dd
        /   - @user.categories.each do |category|
        /     = category.name

        / %dt Proficient Languages
        / %dd
        /   - @user.proglangs.each do |lang|
        /     %span.tags.lang-tag= lang.name

        / %dt Class of
        / %dd
        /   = @user.class_of

        / / %dt Units this semester
        / / %dd
        / /   = @user.units

        / %dt Hours free
        / %dd
        /   = @user.free_hours

        / / %dt Free in the summer
        / / %dd
        / /   = @user.summer ? "Yes" : "No"

        / / %dt Research
        / / %dd
        / /   = @user.research_blurb

        / %dt Experience
        / %dd
        /   = @user.experience

        / %dt Link to Resume
        / %dd
        /   - if @user.url.present?
        /     =link_to url_with_protocol(@user.url), url_with_protocol(@user.url)

        / - else 
        / - if @user.research_blurb != nil && @user.research_blurb != ""
        %dt Research Description
        %dd 
          = @user.research_blurb

        %dt All Posted Jobs
        %dd
          - if @user.jobs.present?
            = render @user.jobs
