***REMOVED*** util functions used by scripts

export PATH=/sbin:/usr/sbin:/bin:/usr/bin:$PATH

***REMOVED*** set up variables
prog=${0***REMOVED******REMOVED****/}

***REMOVED*** source the config file if present
confFile=${solr_root}/conf/scripts.conf
if [[ -f $confFile ]]
then
    . $confFile
fi

function fixUser
{
***REMOVED*** set user to $(whoami) if not specified
    if [[ -z ${user} ]]
    then
        user=$(whoami)
    fi

***REMOVED*** sudo
    if [[ $(whoami) != ${user} ]]
    then
        sudo -u ${user} $0 "$@"
        exit $?
    fi

    oldwhoami=$(who -m | cut -d' ' -f1 | sed -e's/^.*!//')

    if [[ "${oldwhoami}" == "" ]]
    then
        oldwhoami=`ps h -Hfp $(pgrep -g0 ${0***REMOVED******REMOVED****/}) | tail -1|cut -f1 -d" "`
    fi
}

function timeStamp
{
    date +'%Y/%m/%d %H:%M:%S'
}

function logMessage
{
    echo $(timeStamp) $@>>$log
    if [[ -n ${verbose} ]]
    then
	echo $@
    fi
}

function logExit
{
    end=`date +"%s"`
    diff=`expr $end - $start`
    echo "$(timeStamp) $1 (elapsed time: $diff sec)">>$log
    exit $2
}

***REMOVED*** create logs directory if not there
if [[ ! -d ${solr_root}/logs ]]
then
    mkdir ${solr_root}/logs
fi

umask 002
