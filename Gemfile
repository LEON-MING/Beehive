source 'http://rubygems.org'

gem 'rails', ['~> 3.0.3', '< 3.1.0']

***REMOVED*** Bundle edge Rails instead:
***REMOVED*** gem 'rails', :git => 'git://github.com/rails/rails.git'

***REMOVED*** Data
gem 'mysql2', '< 0.3.0'  ***REMOVED*** rails 3.0.x and mysql >= .3 don't mix

***REMOVED*** Debugging
gem "exception_notification",
    :git => "git://github.com/rails/exception_notification.git",
    :require => "exception_notifier"

***REMOVED*** Misc
gem 'authlogic',
    :git => 'git://github.com/binarylogic/authlogic.git'
gem 'will_paginate', "~> 3.0.pre2"
gem 'rubycas-client', :require => ['casclient', 'casclient/frameworks/rails/filter']
gem 'acts_as_taggable_on_steroids', :require => ['acts_as_taggable', 'tags_helper', 'tag_list', 'tagging', 'tag']
gem 'net-ldap', :require => 'net/ldap'
gem 'thinking-sphinx', '~> 2.0.0', :require => 'thinking_sphinx'
gem 'nokogiri'

***REMOVED*** Deploy with Capistrano
gem 'capistrano'

***REMOVED*** Heroku
gem 'heroku'

***REMOVED*** Production-specific
group :production do
  gem 'flying-sphinx',   '~> 0.6.0'
end

***REMOVED*** Testing
group :test do
  gem 'autotest-rails'
  gem 'rspec-rails'
  gem 'cucumber-rails'
  gem 'capybara'
  gem 'database_cleaner'
end


