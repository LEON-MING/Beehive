- content_for :title, "Application Details"
- @job = @applic.job
.container***REMOVED***applic_show_main
  %h1= "Application - ***REMOVED***{@applic.job.title}"
  .card
    %h2 Application Info
    %dl.dl-horizontal
      %dt Applicant
      %dd= link_to @applic.user.name, url_for(@applic.user)

      %dt Status
      %dd= @status

      %dt Date applied
      %dd= @applic.created_at.getlocal.pp

      %dt Message
      %dd= @applic.message
    


    %h2 Applicant Profile
    = render 'users/applic_info', :user => @applic.user

    - if (@job.question_1 != nil && @job.question_1 != "") || (@job.question_2 != nil && @job.question_2 != "")|| (@job.question_3 != nil  && @job.question_3 != "")
      %h2 Faculty Questions 
      - if @job.question_1 != nil && @job.question_1 != ""
        %dt ***REMOVED***{@job.question_1}
        %dd= @applic.answer_1 
      - if @job.question_2 != nil && @job.question_2 != ""
        %dt ***REMOVED***{@job.question_2}
        %dd= @applic.answer_2
      - if @job.question_3 != nil && @job.question_3 != ""
        %dt ***REMOVED***{@job.question_3}
        %dd= @applic.answer_3

    - if @applic.status != "accepted"
      = form_tag('/applications/%s' % @applic.id, :method => "post") do
        = submit_tag "Accept this Applicant", class: "btn btn-primary"
      = form_tag('/applics/applications/%s/delete' % @applic.id, :method => "get") do
        = submit_tag "Reject this Applicant", class: "btn btn-warning"
    - if @applic.status == "accepted"
      = form_tag('/applications/%s/unaccept' % @applic.id, :method => "post") do
        = submit_tag "Unhire Accepted Applicant", class: "btn btn-primary"

