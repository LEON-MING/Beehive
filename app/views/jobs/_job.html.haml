- actions = job.actions(@current_user)
%div{:class => "job_#{cycle('even', 'odd')}", :id => "job#{job.id}"}
  %table.job_list
    %td.job_table_left
      %ul.actions.action-right
        - actions.each do |a|
          - case a
          - when 'edit'
            %li= link_to 'edit', edit_job_path(job)
            %li= link_to 'delete', delete_job_path(job)
          - when 'watch'
            %li= link_to 'watch', watch_job_path(job) if actions.include?('watch')
          - when 'unwatch'
            %li= link_to 'unwatch', unwatch_job_path(job) if actions.include?('unwatch')
          - when 'apply'
            %li= link_to 'apply', new_job_applic_path(job)
          - when 'applied'
            %li applied!
          - when 'resume'
            %li= link_to 'resume app', new_job_applic_path(job), class: 'wide'
        - if controller.controller_name != 'dashboard'
          - job.curations(@current_user).each do |org, curated|
            %li
              - if curated
                = link_to 'uncurate', orgs_uncurate_path(:abbr => org.abbr, :job_id => job.id), method: :post, |
                  title: org.name, rel: 'tooltip'                                                              |
              - else
                = link_to 'curate', orgs_curate_path(:abbr => org.abbr, :job_id => job.id), method: :post, |
                  title: org.name, rel: 'tooltip'                                                          |
      .job_title
        = link_to job.title, job_path(job)
      - job_tags = job.tag_list
      %div
        - if controller.controller_name != 'dashboard'
          .job_desc
            %span{:id => "job_desc_#{job.id}"}
              = truncate job.desc, :length => 200, :omission => '...'
            %span{:id => "job_#{job.id}", :style => "display:none;overflow:hidden;height0px;"}
              = job.desc
            - if @current_user and @current_user.user_type == User::Types::Admin
              .posted
                Posted: #{job.created_at.strftime("%m/%d/%Y")}
        - if job_tags.empty?
          (none)
        - else
          = render partial: 'jobs/tag', collection: job.tag_list